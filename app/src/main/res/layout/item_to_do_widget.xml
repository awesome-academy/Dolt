<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutWidgetItem"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_64">

    <FrameLayout
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/textColorPurple"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fragment_background_purple"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textColorBlue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fragment_background_blue"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textColorGreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fragment_background_green"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textColorYellow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fragment_background_yellow"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textColorOrange"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fragment_background_orange"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textColorRed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fragment_background_red"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textColorDefault"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fragment_background_gray"
            android:visibility="gone" />
    </FrameLayout>


    <TextView
        android:id="@+id/textWidgetItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_32"
        android:textColor="@color/color_text"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/textWidgetItemInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_32"
        android:gravity="end"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/textAlertStatus"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_alarm_on_black_24dp" />

</RelativeLayout>
